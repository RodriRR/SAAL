<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="viewmodel"
                type="com.saal.ui.viewModel.MainViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
                android:id="@+id/addCategoryEt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@={viewmodel.nameNewCategory}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:hint="@string/add_category"/>

        <FrameLayout android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:background="@drawable/ic_plus"
                     app:layout_constraintRight_toRightOf="parent"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintBottom_toBottomOf="@+id/addCategoryEt"
                     android:id="@+id/addButton"
                     android:layout_marginRight="@dimen/space_30dp"
                     android:onClick="@{() -> viewmodel.createNewCategory(0)}"/>


        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/category_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/space_10dp"
                setListDataCategory="@{viewmodel.categories}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/addCategoryEt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>